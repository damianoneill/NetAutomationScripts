#
# Nodes in the network
#
{% macro internal_link(name,ip,cost,remote) %}
{{ name }}: { ip: {{ip}}, remote: {{remote}} {% if cost %}, cost: {{cost}}{% endif %} }{% endmacro %}

---

common:
    bgp_asn: {{ common.bgp_asn }}

nodes:
{% for node in nodes %}

  {{ node.name }}:
    mgmt: {{ node.mgmt }}
    rid:  {{ node.rid }}
    links:
{%   for link in links %}
{%     if link.left == node.name %}
      {{ internal_link(link.left_port,link.left_ip,link.cost|default(''),link.right) }}
{%     elif link.right == node.name %}
      {{ internal_link(link.right_port,link.right_ip, link.cost|default(''),link.left) }}
{%     endif %}
{%   endfor %}
{%   if bgp is defined %}
    bgp:
       internal:
{%       if node.rid in bgp.rr  %}
         rr: true
         peers:
{%          for peer in bgp.clients %}
            - {{ peer }}
{%          endfor %}
{%       else %}
         peers:
{%          for peer in bgp.rr %}
            - {{ peer }}
{%          endfor %}
{%       endif %}
         af:
{%          for af in bgp.af %}
            - {{ af }}
{%          endfor %}
{%   endif %}
{%   if ospf is defined %}
    ospf:
        network: {{ospf.network}}
{%   endif %}
{% endfor %}

